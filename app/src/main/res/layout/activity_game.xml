<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/solo_game_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sword.rpg.Game"
    tools:layout_editor_absoluteY="81dp">

    <fragment
        android:id="@+id/shown_screen"
        android:name="com.example.sword.rpg.EmptyFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation = "0dp"
        app:layout_constraintVertical_bias="0.0"></fragment>

    <fragment
        android:id="@+id/timer_location"
        android:name="com.example.sword.rpg.EmptyFragment"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="47dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/command_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TEST TEXT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
