<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/compass_mechanic_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/RubenRed">

    <TextView
        android:id="@+id/command_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/bubblegum"
        android:text="Turn the Compass!"
        android:textAlignment="center"
        android:textColor="@color/RubenRedDark"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/command_title"
        android:layout_alignStart="@+id/command_title"
        android:layout_below="@+id/command_title"
        android:layout_marginTop="63dp"
        android:fontFamily="@font/bubblegum"
        android:text="Heading: 0.0"
        android:textAlignment="center"
        android:textColor="@color/RubenRedDark"
        android:textSize="48sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/command_title" />

        <ImageView
            android:id="@+id/imageViewCompass"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/tvHeading"
            android:layout_centerHorizontal="true"
            android:src="@drawable/arrowcompass"
            android:tint="@color/RubenRedDark"
            android:layout_marginTop="63dp"
            app:layout_constraintTop_toBottomOf="@+id/tvHeading"/>

        <ImageView
            android:id="@+id/unicorn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/imageViewCompass"
            android:layout_alignStart="@+id/imageViewCompass"
            android:layout_alignTop="@+id/imageViewCompass"
            android:src="@drawable/arrowcompassgrey"
            android:layout_marginTop="63dp"
            android:tint="@color/RubenRedDark" />

    </RelativeLayout>




