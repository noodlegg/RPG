<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/compass_mechanic_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/RubenRed">

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Heading: 0.0" />

        <ImageView
            android:id="@+id/imageViewCompass"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/tvHeading"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:src="@drawable/arrowcompass"
            android:tint="@color/RubenRedDark" />

        <ImageView
            android:id="@+id/unicorn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/imageViewCompass"
            android:layout_alignStart="@+id/imageViewCompass"
            android:layout_alignTop="@+id/imageViewCompass"
            android:src="@drawable/arrowcompassgrey"
            android:tint="@color/RubenRedDark" />

    </RelativeLayout>




