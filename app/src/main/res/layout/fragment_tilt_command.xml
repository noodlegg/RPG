<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/RubenRed"
    tools:context="com.example.sword.rpg.TiltCommandFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/command_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/bubblegum"
        android:text="Tilt Direction"
        android:textAlignment="center"
        android:textColor="@color/RubenRedDark"
        android:textSize="48sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/button"
        android:layout_width="212dp"
        android:layout_height="212dp"
        android:layout_margin="20dp"
        android:layout_marginBottom="168dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:tint="@color/RubenRedDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/tilt_command" />

</android.support.constraint.ConstraintLayout>
