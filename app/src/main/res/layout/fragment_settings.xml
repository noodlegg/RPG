<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    >

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/version"
        android:layout_marginBottom="32dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/username_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/soundEffects"
        android:layout_centerHorizontal="true"
        android:maxLength="20"
        android:layout_marginBottom="32dp"
        android:hint="Enter username"
        android:textColorHint="#000000"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/confirm_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/username_input"
        android:layout_above="@id/soundEffects"
        android:layout_marginBottom="32dp"
        android:text="Confirm"/>

    <Switch
        android:id="@+id/soundEffects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/howToPlay"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/bubblegum"
        android:text="soundEffect"
        android:textColor="?attr/colorButtonNormal"
        android:textSize="18sp"
        android:trackTint="?attr/colorButtonNormal" />


    <Button
        android:id="@+id/howToPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/aboutUs"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:fontFamily="@font/bubblegum"
        android:text="HowToPlay"
        android:textSize="18sp"
        />


    <Button
        android:id="@+id/aboutUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/bubblegum"
        android:text="About Us"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutUs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/bubblegum"
        android:text="Version: 0.0.1"
        android:textColor="?attr/colorSwitchThumbNormal"
        android:textSize="18sp" />


</RelativeLayout>
